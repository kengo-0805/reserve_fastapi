{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "sql_app.main:app",
                "--reload",
                "--host", "127.0.0.1",
                "--port", "8000"
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Streamlit Debug",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app.py",
                "--server.port", "8501"
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "FastAPI + Streamlit",
            "configurations": ["FastAPI Debug", "Streamlit Debug"],
            "stopAll": true,
            "preLaunchTask": ""
        }
    ]
}